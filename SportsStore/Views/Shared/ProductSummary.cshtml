@model Product

<div class="col-md-6">
    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>
                @Model.Name
                <span class="badge rounded-pill text-bg-primary price-pill">
                    <small>@Model.Price.ToString("c")</small>
                </span>
            </h4>
        </div>
        <div class="card-text p-1">
            <p>@Model.Description</p>
        </div>
    </div>
</div>